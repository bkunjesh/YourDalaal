<% layout('/layouts/boilerplate') %>

<h1>Add New Product</h1>

<div class="row">
    <div class="col-6">
        <form  action="/yourdalaal" method="POST" novalidate class="needs-validation" enctype="multipart/form-data"> 
            <div class="mb-2">
                <label for="name" class="form-label">Product Title</label>
                <input type="text" name="name" class="form-control" id="name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label class="form-label" for="category">Category</label>
                <input class="form-control" type="text" name="description[category]" id="category" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label class="form-label" for="price">price</label>
                <input class="form-control" type="text" name="description[price]" id="price" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <input type="file" name="image" id="image" multiple>
            </div>
            <!-- <div class="mb-2">
                <label for="images" class="form-label">Image Url</label>
                <input type="text" name="description[images]" class="form-control" id="images" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            
            <div class="mb-2">
                <label for="Description" class="form-label">Description</label>
                <textarea type="text" name="description[desc]" class="form-control" id="Description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <button type="submit" class="btn btn-primary">Add new Product</button>
            </div>
        </form>
    </div>
</div>