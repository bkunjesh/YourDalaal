<% layout('/layouts/boilerplate') %>

<h1>Add New Item</h1>

<div class="row">
    <div class="col-6">
        <form action="/yourdalaal" method="POST">
            <div class="mb-2">
                <label for="name" class="form-label">Product Title</label>
                <input type="text" name="name" class="form-control" id="name">
            </div>
            <div class="mb-2">
                <label class="form-label" for="category">Category</label>
                <input class="form-control" type="text" name="description[category]" id="category">
            </div>
            <div class="mb-2">
                <label class="form-label" for="price">price</label>
                <input class="form-control" type="text" name="description[price]" id="price">
            </div>
            <div class="mb-2">
                <label for="photo" class="form-label">Image Url</label>
                <input type="text" name="description[photo]" class="form-control" id="photo">
            </div>
            <div class="mb-2">
                <button type="submit" class="btn btn-primary">Add new Item</button>
            </div>
        </form>
    </div>
</div>