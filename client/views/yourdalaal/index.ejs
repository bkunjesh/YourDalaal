<% layout('/layouts/boilerplate') %>


    <div class="container-fluid m-2">

        <div class="col-12 align-self-center">
    
            <div class="row justify-content-center">
            
            <% for(let product of products){ %>            
                <div class="card m-2 " style="width: 18rem;">
                    <img src="<%= product.description.images %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= product.description.price %> Rs.</h6>
                        <p class="card-text"><%= product.description.desc %></p>
                        <a href="/yourdalaal/<%= product._id %>" class="btn btn-primary">view product</a>
                    </div>
                </div>
                <% } %>
            </div>

        </div>
    </div> 
